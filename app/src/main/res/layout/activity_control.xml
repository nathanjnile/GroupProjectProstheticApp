<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Grey"
    tools:context=".ControlActivity">

    <ImageButton
        android:id="@+id/moveupbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_corner_home_button"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/moveupText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/moveupText"
        app:srcCompat="@drawable/upmovebutton" />

    <ImageButton
        android:id="@+id/movedownbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_corner_home_button"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/movedownText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/movedownText"
        app:srcCompat="@drawable/downmovebutton" />

    <ImageButton
        android:id="@+id/maxbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_corner_home_button"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/maxangleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/maxangleText"
        app:srcCompat="@drawable/maxanglebutton" />

    <ImageButton
        android:id="@+id/minbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_corner_home_button"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/minangleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/minangleText"
        app:srcCompat="@drawable/minanglebutton" />

    <ImageButton
        android:id="@+id/lockbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_corner_home_button"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/lockangleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lockangleText"
        app:srcCompat="@drawable/lockbutton" />




    <TextView
        android:id="@+id/controltitle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Prosthetic Control"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/homebuttoncontrol"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_corner_home_button"
        android:onClick="goMainActivity"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/controltitle"
        app:layout_constraintEnd_toStartOf="@+id/controltitle"
        app:srcCompat="@drawable/homebutton" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="21dp"
        android:layout_height="13dp"
        android:layout_marginStart="51dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/controltitle"
        app:layout_constraintTop_toTopOf="@+id/homebuttoncontrol"
        app:srcCompat="@drawable/battery" />

    <TextView
        android:id="@+id/moveupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="Move Up"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="@+id/homebuttoncontrol"
        app:layout_constraintTop_toBottomOf="@+id/controltitle" />

    <TextView
        android:id="@+id/movedownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_spacing_control"
        android:text="Move Down"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="@+id/moveupText"
        app:layout_constraintTop_toBottomOf="@+id/moveupText" />

    <TextView
        android:id="@+id/maxangleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_spacing_control"
        android:text="Maximum Angle"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="@+id/movedownText"
        app:layout_constraintTop_toBottomOf="@+id/movedownText" />

    <TextView
        android:id="@+id/minangleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_spacing_control"
        android:text="Minimum Angle"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="@+id/maxangleText"
        app:layout_constraintTop_toBottomOf="@+id/maxangleText" />

    <TextView
        android:id="@+id/lockangleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_spacing_control"
        android:text="Lock Angle"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="@+id/minangleText"
        app:layout_constraintTop_toBottomOf="@+id/minangleText" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="81dp"
        android:layout_height="57dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/moveupbutton"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/moveupbutton"
        app:layout_constraintVertical_bias="0.47"
        app:srcCompat="@drawable/footcover" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.333"
        app:srcCompat="@drawable/upmovebutton" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="81dp"
        android:layout_height="57dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/movedownbutton"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/movedownbutton"
        app:srcCompat="@drawable/footcover" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.32999998"
        app:srcCompat="@drawable/downmovebutton" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="81dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:rotation="-15"
        app:layout_constraintBottom_toBottomOf="@+id/maxbutton"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/maxbutton"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/footcover" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="81dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:rotation="15"
        app:layout_constraintBottom_toBottomOf="@+id/minbutton"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/minbutton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/footcover" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="81dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/lockbutton"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/lockbutton"
        app:srcCompat="@drawable/footcover" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="8dp"
        android:layout_height="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:layout_constraintVertical_bias="0.59000003"
        app:srcCompat="@drawable/lockbutton" />

    <TextView
        android:id="@+id/resetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Reset Position"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="@+id/lockangleText"
        app:layout_constraintTop_toBottomOf="@+id/lockangleText" />

    <ImageButton
        android:id="@+id/resetbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_corner_home_button"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/resetText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/resetText"
        app:srcCompat="@drawable/resetbutton" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="81dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/resetbutton"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/resetbutton"
        app:srcCompat="@drawable/footcover" />

    <TextView
        android:id="@+id/recalibrateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Re-Calibrate"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="@+id/resetText"
        app:layout_constraintTop_toBottomOf="@+id/resetText" />

    <ImageButton
        android:id="@+id/recalibratebutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_corner_home_button"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/recalibrateText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recalibrateText"
        app:srcCompat="@drawable/recalibratebutton" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="81dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/recalibratebutton"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/recalibratebutton"
        app:srcCompat="@drawable/footcover" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Previous Action:"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="@+id/homebuttoncontrol"
        app:layout_constraintTop_toBottomOf="@+id/homebuttoncontrol" />

    <TextView
        android:id="@+id/previousactiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="N/A"
        android:textColor="@color/White"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/homebuttoncontrol" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Unlock Angle"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="@+id/recalibrateText"
        app:layout_constraintTop_toBottomOf="@+id/recalibrateText" />

    <ImageButton
        android:id="@+id/unlockbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corner_home_button"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView15"
        app:srcCompat="@drawable/lockbutton" />


</android.support.constraint.ConstraintLayout>